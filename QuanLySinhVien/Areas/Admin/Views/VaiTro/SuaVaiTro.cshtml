@model QuanLySinhVien.Models.VaiTro

@{
    ViewBag.Title = "SuaVaiTro";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.active = "DanhSachVaiTro";
}

<div class="content container-fluid">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title">Thêm vai trò</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="~/Admin/VaiTro/DanhSachVaiTro">Vai trò</a></li>
                    <li class="breadcrumb-item active">Sửa vai trò</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">

                    @using (Html.BeginForm("SuaVaiTro", "VaiTro", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <div class="col-12">
                            <h5 class="form-title"><span>Thông tin vai trò</span></h5>
                        </div>

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.MaVT, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <input type="text" name="MaVT" class="form-control" value="@Model.MaVT" readonly />
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.TenVT, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TenVT, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TenVT, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="form-group row">
                                <div class="col-md-10">
                                    <label class="col-form-label col-md-2">Phân quyền</label>
                                </div>
                                <div class="col-md-10">
                                    @Html.Partial("ChucNangSelectionView", QuanLySinhVien.Models.BUS.ChucNangSelectionBUS.DanhSachChucNangSelectionTheoVT(Model.MaVT))
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="text-danger">
                                @TempData["Error"]
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Cập nhật" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
