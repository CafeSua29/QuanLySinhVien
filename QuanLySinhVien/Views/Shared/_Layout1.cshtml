<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="~/assets/img/logo-dhxd.png">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,500;0,600;0,700;1,400&amp;display=swap">
    <link rel="stylesheet" href="~/assets/plugins/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/assets/plugins/datatables/datatables.min.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
</head>
<body>
    <div class="main-wrapper">
        <div class="header">
            <div class="header-left">
                <a href="~/SinhVien/DanhSachSinhVien" class="logo">
                    <img src="https://media.huce.edu.vn/Media/2_SINHVIEN/FolderFunc/202304/Images/logodhxd-20230421024916-e.png" alt="Logo">
                </a>
                <a href="~/SinhVien/DanhSachSinhVien" class="logo logo-small">
                    <img src="~/assets/img/logo-dhxd.png" alt="Logo" width="30" height="30">
                </a>
            </div>
            <a href="javascript:void(0);" id="toggle_btn">
                <i class="fas fa-align-left"></i>
            </a>
            <a class="mobile_btn" id="mobile_btn">
                <i class="fas fa-bars"></i>
            </a>
            <ul class="nav user-menu">
                <li class="nav-item dropdown has-arrow">
                    <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                        <span class="user-img"><img class="rounded-circle" src="~/assets/img/profiles/avatar-01.jpg" width="31" alt="Ryan Taylor"></span>
                    </a>
                    <div class="dropdown-menu">
                        <div class="user-header">
                            <div class="avatar avatar-sm">
                                <img src="~/assets/img/profiles/avatar-01.jpg" alt="User Image" class="avatar-img rounded-circle">
                            </div>
                            <div class="user-text">
                                <h6><span>@HttpContext.Current.Session["username"]</span></h6>
                                <p class="text-muted mb-0">Quản lý</p>
                            </div>
                        </div>
                        <a class="dropdown-item" href="~/Account/ChangePassword">Đổi mật khẩu</a>
                        <a class="dropdown-item" href="~/Account/Logout">Đăng xuất</a>
                    </div>
                </li>
            </ul>
        </div>
        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li class="menu-title">
                            <span></span>
                        </li>
                        <li class="submenu active">
                            <a href="#"><i class="fas fa-user-graduate"></i> <span>Sinh viên</span> <span class="menu-arrow"></span></a>
                            <ul>
                                <li><a href="~/SinhVien/DanhSachSinhVien" @Html.Raw(ViewBag.active == "DanhSachSinhVien" ? "class = 'active'" : "")>Danh sách sinh viên</a></li>
                                <li><a href="~/SinhVien/ThemSinhVien" @Html.Raw(ViewBag.active == "ThemSinhVien" ? "class = 'active'" : "")>Thêm sinh viên</a></li>
                            </ul>
                        </li>
                        <li class="submenu active">
                            <a href="#"><i class="fas fa-user-graduate"></i> <span>Điểm rèn luyện</span> <span class="menu-arrow"></span></a>
                            <ul>
                                <li><a href="~/DiemRenLuyen/DanhSachBangDiemRenLuyen" @Html.Raw(ViewBag.active == "DanhSachBangDiemRenLuyen" ? "class = 'active'" : "")>Danh sách bảng điểm rèn luyện</a></li>
                            </ul>
                        </li>
                        <li class="submenu active">
                            <a href="#"><i class="fas fa-user-graduate"></i> <span>Học bổng</span> <span class="menu-arrow"></span></a>
                            <ul>
                                <li><a href="~/HocBong/DanhSachHocBong" @Html.Raw(ViewBag.active == "DanhSachHocBong" ? "class = 'active'" : "")>Danh sách học bổng</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="page-wrapper">
            <div>
                @RenderBody()
            </div>
            <footer>
            </footer>
        </div>
    </div>
    <script src="~/assets/js/jquery-3.6.0.min.js"></script>
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/assets/plugins/datatables/datatables.min.js"></script>
    <script src="~/assets/js/script.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>