@model List<QuanLySinhVien.Models.SinhVien>

@{
    ViewBag.Title = "DanhSachSinhVien";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="content container-fluid">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title">Students</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item active">Students</li>
                </ul>
            </div>
            <div class="col-auto text-right float-right ml-auto">
                <a href="#" class="btn btn-outline-primary mr-2"><i class="fas fa-download"></i> Download</a>
                <a href="~/SinhVien/ThemSinhVien" class="btn btn-primary"><i class="fas fa-plus"></i></a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card card-table">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-center mb-0 datatable">
                            <thead>
                                <tr>
                                    <th>Ma Sinh Vien</th>
                                    <th>Ho Sinh Vien</th>
                                    <th>Ten Sinh Vien</th>
                                    <th>GioiTinh</th>
                                    <th>Ngay Sinh</th>
                                    <th>Que Quan</th>
                                    <th>So Dien Thoai</th>
                                    <th>Ma Lop</th>
                                    <th class="text-right">Hanh Dong</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var sv in Model)
                                {
                                    <tr>
                                        <td>@sv.MaSV</td>
                                        <td>
                                            <h2 class="table-avatar">
                                                <a href="~/SinhVien/ChiTietSinhVien?masv=@sv.MaSV" class="avatar avatar-sm mr-2"><img class="avatar-img rounded-circle" src="~/assets/img/profiles/avatar-01.jpg" alt="User Image"></a>
                                                <a href="~/SinhVien/ChiTietSinhVien?masv=@sv.MaSV">@sv.HoSV</a>
                                            </h2>
                                        </td>
                                        <td>
                                            <h2 class="table-avatar">
                                                <a href="~/SinhVien/ChiTietSinhVien?masv=@sv.MaSV">@sv.TenSV</a>
                                            </h2>
                                        </td>
                                        <td>@sv.GioiTinh</td>
                                        <td>@String.Format("{0:dd-MM-yyyy}", sv.NgaySinh)</td>
                                        <td>@sv.QueQuan</td>
                                        <td>@sv.SoDienThoai</td>
                                        <td>@sv.MaLop</td>
                                        <td class="text-right">
                                            <div class="actions">
                                                <a href="~/SinhVien/SuaSinhVien?masv=@sv.MaSV" class="btn btn-sm bg-success-light mr-2">
                                                    <i class="fas fa-pen"></i>
                                                </a>
                                                <a href="#" onclick="if (confirm('Ban co chac muon xoa sinh vien nay khong ?')) { location.href = '/SinhVien/XoaSinhVien?masv=@sv.MaSV' }" class="btn btn-sm bg-danger-light">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

