@model List<QuanLySinhVien.Models.SinhVien>

@{
    ViewBag.Title = "DanhSachSinhVien";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="content container-fluid">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <div class="top-nav-search">
                    <form>
                        <input type="text" class="form-control" placeholder="Nhập thông tin tìm kiếm">
                        <button class="btn" type="submit"><i class="fas fa-search"></i></button>
                    </form>
                </div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item active"></li>
                </ul>
            </div>
            <div class="col-auto text-right float-right ml-auto">
                <a href="~/SinhVien/XuatFileExcel" class="btn btn-outline-primary mr-2"><i class="fas fa-download"></i> Tải danh sách</a>
                <a href="~/SinhVien/ThemSinhVien" class="btn btn-primary"><i class="fas fa-plus"></i></a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card card-table">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-center mb-0 datatable">
                            <thead>
                                <tr>
                                    <th>Mã sinh viên</th>
                                    <th>Họ sinh viên</th>
                                    <th>Tên sinh viên</th>
                                    <th>Giới tính</th>
                                    <th>Ngày sinh</th>
                                    <th>Quê quán</th>
                                    <th>Số điện thoại</th>
                                    <th>Lớp</th>
                                    <th class="text-right">Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var sv in Model)
                                {
                                    <tr>
                                        <td>@sv.MaSV</td>
                                        <td>
                                            <h2 class="table-avatar">
                                                <a href="~/SinhVien/ChiTietSinhVien?masv=@sv.MaSV" class="avatar avatar-sm mr-2"><img class="avatar-img rounded-circle" src="~/assets/img/profiles/avatar-01.jpg" alt="User Image"></a>
                                                <a href="~/SinhVien/ChiTietSinhVien?masv=@sv.MaSV">@sv.HoSV</a>
                                            </h2>
                                        </td>
                                        <td>
                                            <h2 class="table-avatar">
                                                <a href="~/SinhVien/ChiTietSinhVien?masv=@sv.MaSV">@sv.TenSV</a>
                                            </h2>
                                        </td>
                                        <td>@sv.GioiTinh</td>
                                        <td>@String.Format("{0:dd-MM-yyyy}", sv.NgaySinh)</td>
                                        <td>@sv.QueQuan</td>
                                        <td>@sv.SoDienThoai</td>
                                        <td>@sv.MaLop</td>
                                        <td class="text-right">
                                            <div class="actions">
                                                <a href="~/SinhVien/SuaSinhVien?masv=@sv.MaSV" class="btn btn-sm bg-success-light mr-2">
                                                    <i class="fas fa-pen"></i>
                                                </a>
                                                <a href="#" onclick="if (confirm('Bạn có chắc muốn xóa sinh viên này không ?')) { location.href = '/SinhVien/XoaSinhVien?masv=@sv.MaSV' }" class="btn btn-sm bg-danger-light">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

